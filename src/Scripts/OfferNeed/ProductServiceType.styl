.ps-parent
    overflow hidden
    max-height 24px
    transition max-height 250ms ease-in

    &.opened
        max-height 1000px

        > .selectit::after
            transform rotate(45deg) translateY(-4px) translateX(2px)

    > .selectit
        &::after
            border solid black
            border-width 0 2px 2px 0
            display inline-block
            padding 3px;
            content ''
            transition transform 250ms ease-in
            transform rotate(-45deg)

            
    
    & > li
        max-height 0
        

